@model List<WishlistVM>

@if (Model.Count() > 0)
{
    <div class="col-lg-12 col-md-12 col-12 table-list">
        <table class="cart-table">
            <thead>
                <tr>
                    <th>
                        <span>Product</span>
                    </th>
                    <th></th>
                    <th>
                        <span>Price</span>
                    </th>
                    <th class="medium__item">
                        <span>Stock Status</span>
                    </th>
                    <th class="action-main">
                        <span>Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (WishlistVM item in Model)
                {
                    <tr>
                        <td class="product-thumbnail">
                            <div>
                                <a asp-controller="product" asp-action="detail" asp-route-id="@item.ProductID">
                                    <figure>
                                        <img src="assets/images/products/@item.Image" alt="Product">
                                    </figure>
                                </a>
                            </div>
                        </td>
                        <td>
                            <a href="product-detail.html">
                                @item.Title
                            </a>
                        </td>
                        <td><span class="amount">$40.00</span></td>
                        <td class="medium__item">
                            @if (item.TotalCount >= 1)
                            {
                                <span class="wishlist-in-stock text-success">In Stock</span>
                            }
                            else
                            {
                                <span class="wishlist-in-stock text-danger">Out of stock</span>
                            }
                        </td>
                        <td>
                            <div>
                                <a asp-controller="cart" asp-action="addtocart" asp-route-id="@item.ProductID" class="btn__main addToCart">
                                    Add to cart
                                </a>
                                <a asp-controller="wishlist" asp-action="removecart" asp-route-id="@item.ProductID" class="fa-solid fa-trash deleteWishlist"></a>
                            </div>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3>Your wishlist is empty.</h3>
}

