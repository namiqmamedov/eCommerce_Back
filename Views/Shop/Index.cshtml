@model PagiNationList<Product>

<div class="drawer-menu">
    <nav id="nav">
        <div class="accordion__main contents">
            <div class="accordion-single js-acc-single">
                <div class="accordion-single-item js-acc-item is-open">
                    <h3 class="accordion-single-title js-acc-single-trigger">
                        <label>
                            All Categories
                        </label>
                    </h3>
                    <div class="accordion-single-content">
                        <ul>
                            @foreach (Category item in ViewBag.Categories)
                            {
                                <li>
                                    <a data-category="@item.ID" asp-controller="shop" asp-action="index" asp-route-category="@item.ID"
                                       class="category-link">@item.Name</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="accordion-single-item js-acc-item is-open">
                    <h3 class="accordion-single-title js-acc-single-trigger">
                        <label>
                            Price
                        </label>
                    </h3>
                    <div class="accordion-single-content">
                        <ul>
                            <li><a class="price-link" data-price="1" asp-controller="shop" asp-action="index" asp-route-minPrice="0" asp-route-maxPrice="100">$0.00 - $100.00</a></li>
                            <li><a class="price-link" data-price="2" asp-controller="shop" asp-action="index" asp-route-minPrice="100" asp-route-maxPrice="300">$100.00 - $200.00</a></li>
                            <li><a class="price-link" data-price="3" asp-controller="shop" asp-action="index" asp-route-minPrice="200" asp-route-maxPrice="300">$200.00 - $300.00</a></li>
                            <li><a class="price-link" data-price="4" asp-controller="shop" asp-action="index" asp-route-minPrice="300" asp-route-maxPrice="500">$300.00 - $500.00</a></li>
                        </ul>
                        <form asp-controller="shop" asp-action="index" method="GET" class="price-range mt-3">
                            <input type="number" name="minPrice" class="min_price text-center" placeholder="$min">
                            <span class="dash">-</span>
                            <input type="number" name="maxPrice" class="max_price text-center" placeholder="$max">
                            <button type="submit" class="btn btn-primary btn-rounded">Go</button>
                        </form>
                    </div>
                </div>
                <div class="accordion-single-item js-acc-item is-open">
                    <h3 class="accordion-single-title js-acc-single-trigger">
                        <label>
                            Size
                        </label>
                    </h3>
                    <div class="accordion-single-content">
                        <div class="checkboxes">
                            <div class="checkboxes__row">
                                <ul>
                                    @foreach (var item in ViewBag.Sizes)
                                    {
                                        <li class="checkboxes__item">
                                            <label class="checkbox style-c">
                                                <a class="sizeItem" data-size="@item.ID" asp-controller="shop" asp-action="index" asp-route-size="@item.ID">
                                                    <input type="checkbox" />
                                                    <div class="checkbox__checkmark"></div>
                                                </a>
                                                <a asp-controller="shop" asp-action="index" asp-route-size="@item.ID" data-size="@item.ID" class="checkbox__body">@item.Name</a>
                                            </label>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-single-item js-acc-item is-open">
