@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin - Login</title>

    <link href="~/admin/css/login.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form method="POST" asp-area="admin" asp-controller="account" asp-action="login" class="user">
                                        <div class="log-form">
                                            <h2>Login to your account</h2>
                                            <div class="text text-danger" asp-validation-summary="ModelOnly"></div>

                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                            <input asp-for="UserName" title="username" placeholder="username" />

                                            <span class="text-danger" asp-validation-for="Password"></span>
                                            <input asp-for="Password" title="password" placeholder="password" />
                                            <div class="form-group" style="display: flex; justify-content: space-between;">
                                                <button class="text text-dark" type="submit">Login</button>

                                                <div class="custom-control custom-checkbox small" style="display: flex; align-items: center;">
                                                    <input style="padding: 0; margin: 0;" type="checkbox" class="custom-control-input" asp-for="RemindMe">
                                                    <label style="font-size: 12px;width: 100%;" class="custom-control-label" asp-for="RemindMe">
                                                        Remember
                                                        Me
                                                    </label>
                                                </div>
                                            </div>
                                        </div><!--end log form -->
                                    </form>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/manage/vendor/jquery/jquery.min.js"></script>
    <script src="~/manage/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/manage/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/manage/js/sb-admin-2.min.js"></script>

</body>

</html>

