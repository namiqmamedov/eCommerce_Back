@model Category
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label" asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Name...">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File">Image</label>
                    <input class="form-control mb-3" asp-for="File" placeholder="Image...">
                    <span class="text-danger" asp-validation-for="File"></span>
                    @if(Model.Image != null)
                    {
                        <div style="width: 12.33%">
                            <img src="~/assets/images/categories/@Model.Image" class="img-fluid" alt="Alternate Text" />
                        </div>
                    }
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
