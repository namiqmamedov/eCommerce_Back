@model Category
@{
    ViewData["Title"] = "Read";
}

<h1>Info</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form>
                <div class="form-group">
                    <label class="form-label" asp-for="Name">Name</label>
                    <input class="form-control" disabled asp-for="Name" placeholder="Name...">
                </div>
                <div class="form-group">
                    <label asp-for="File">Image</label>
                    <input disabled class="form-control mb-3" asp-for="File" placeholder="Image...">
                    <span class="text-danger" asp-validation-for="File"></span>
                    @if (Model.Image != null)
                    {
                        <div style="width: 12.33%">
                            <img src="~/assets/images/categories/@Model.Image" class="img-fluid" alt="Alternate Text" />
                        </div>
                    }
                </div>
                <a class="btn btn-primary" asp-area="admin" asp-controller="category" asp-action="index">
                    Back to menu
                </a>
            </form>
        </div>
    </div>
</div>
