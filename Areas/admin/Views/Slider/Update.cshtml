@model Slider
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label" asp-for="TopTitle">Top Title</label>
                    <input class="form-control" asp-for="TopTitle" placeholder="Top Title...">
                    <span class="text-danger" asp-validation-for="TopTitle"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Title...">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description">Description</label>
                    <input class="form-control" asp-for="Description" placeholder="Description...">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ShopLink">Shop Link</label>
                    <input class="form-control" asp-for="ShopLink" placeholder="Example: http://wolmart.com/shop/?category=1">
                    <span class="text-danger" asp-validation-for="ShopLink"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsFirstImage" id="flexCheckDefault">
                    <label class="form-check-label" style="padding-left: 10px;" for="flexCheckDefault">
                        Should the photo appear first ?
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="File">Image</label>
                    <input class="form-control" asp-for="File" placeholder="Image...">
                    <span class="text-danger" asp-validation-for="File"></span>
                    <div class="mt-2" style="width: 12.33%">
                        <img src="~/assets/images/slides/@Model.Image" class="img-fluid" alt="Alternate Text" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SliderFile">Background Image</label>
                    <input class="form-control" asp-for="SliderFile" placeholder="Background Image...">
                    <span class="text-danger" asp-validation-for="SliderFile"></span>
                    <div class="mt-2" style="width: 12.33%">
                        <img src="~/assets/images/slides/@Model.BackgroundImage" class="img-fluid" alt="Alternate Text" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
