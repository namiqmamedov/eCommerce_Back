@model Slider
@{
    ViewData["Title"] = "Read";
}

<h1>Info</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form>
                <div class="form-group">
                    <label class="form-label" asp-for="TopTitle">TopTitle</label>
                    <input class="form-control" disabled asp-for="TopTitle" placeholder="Top Title...">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Title">Title</label>
                    <input class="form-control" disabled asp-for="Title" placeholder="Title...">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description">Description</label>
                    <input class="form-control" disabled asp-for="Description" placeholder="Description...">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ShopLink">Shop Link</label>
                    <input class="form-control" disabled asp-for="ShopLink" placeholder="Shop Link...">
                </div>
                <div class="form-group">
                    <label asp-for="File">Image</label>
                    <input disabled class="form-control mb-3" asp-for="File" placeholder="Image...">
                    <span class="text-danger" asp-validation-for="File"></span>
                    <div style="width: 12.33%">
                        <img src="~/assets/images/slides/@Model.Image" class="img-fluid" alt="Alternate Text" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SliderFile">Background Image</label>
                    <input disabled class="form-control mb-3" asp-for="SliderFile" placeholder="Background Image...">
                    <span class="text-danger" asp-validation-for="SliderFile"></span>
                    <div style="width: 12.33%">
                        <img src="~/assets/images/slides/@Model.BackgroundImage" class="img-fluid" alt="Alternate Text" />
                    </div>
                </div>
                <a class="btn btn-primary" asp-area="admin" asp-controller="slider" asp-action="index">
                    Back to menu
                </a>
            </form>
        </div>
    </div>
</div>
