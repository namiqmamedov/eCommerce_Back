@model Feedback
@{
    ViewData["Title"] = "Read";
}

<h1>Info</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form>
                <div class="form-group">
                    <label class="form-label" asp-for="Name">Name</label>
                    <input class="form-control" disabled asp-for="Name" placeholder="Name...">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control" disabled asp-for="Email" placeholder="Email...">
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Text">Text</label>
                    <textarea rows="3" class="form-control" disabled asp-for="Text" placeholder="Text...">
                    </textarea>
                </div>
                @foreach (FeedbackImage feedback in Model.FeedbackImages)
                {
                    <div style="width: 12.33%" class="mb-3 mt-2">
                        <img src="~/assets/images/feedbacks/@feedback.Image" class="img-fluid" alt="Alternate Text" />
                    </div>
                }
                <a class="btn btn-primary" asp-area="admin" asp-controller="feedback" asp-action="index">
                    Back to menu
                </a>
            </form>
        </div>
    </div>
</div>
