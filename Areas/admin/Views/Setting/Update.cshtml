@model Setting

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<div class="content">
    <div class="main product-index">
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <div class="form-group">
                        <label asp-for="Value" class="form-label"></label>
                        @if (Model.Key == "FooterLogo" || Model.Key == "HeaderLogo" || Model.Key == "AboutImage")
                        {
                            <img src="~/assets/images/@Model.Value" class="mt-3 mb-3 d-flex" />
                            <input type="file" asp-for="File" class="form-control" />
                        }
                        else
                        {
                            <input asp-for="Value" class="form-control">
                        }
                        <span class="text-danger" asp-validation-for="Value"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
