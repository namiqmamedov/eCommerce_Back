@model PagiNationList<Feedback>

@{
    int counter = Model.PageIndex == 1 ? 0 : (Model.PageIndex - 1) * 5;
}

<table class="table table-hover table-s-triped">
    <thead>
        <tr class="head__first">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Rating</th>
            <th scope="col" style="text-align: end;padding-right: 61px;">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Feedback item in Model)
        {
            counter++;

            <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    @for (int i = 0; i < item.Rating; i++)
                    {
                        <i class="fa-solid fa-star" style="color: #e9d24b;"></i>
                    }
                    @for (int i = item.Rating; i < 5; i++)
                    {
                        <i class="fa-solid far fa-star" style="color: grey"></i>
                    }
                </td>
                <td>
                    <div class="settings-tb d-flex gap-2 justify-content-end">
                        <a class="btn btn-secondary" asp-controller="feedback" asp-action="read" asp-area="admin" asp-route-id="@item.ID">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                        <a class="btn btn-danger removeBtn" id="removeBtn" asp-controller="feedback" asp-action="delete" asp-area="admin" asp-route-id="@item.ID">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


