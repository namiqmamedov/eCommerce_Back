@model PagiNationList<AppUser>

@{
    int counter = Model.PageIndex == 1 ? 0 : (Model.PageIndex - 1) * 5;
}

@if(Model.Any())
{
    <table class="table table-hover table-s-triped">
        <thead>
            <tr class="head__first">
                <th scope="col">#</th>
                <th scope="col">Full name</th>
                <th scope="col">Email</th>
                <th scope="col" style="text-align: end;padding-right: 61px;">Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="settings-tb d-flex gap-2 justify-content-end">
                            <a class="btn btn-secondary" asp-area="admin" asp-controller="user" asp-action="read" asp-route-id="@item.Id">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Sorry, but nothing matched your search terms. Please try again with some different keywords</h3>
}


