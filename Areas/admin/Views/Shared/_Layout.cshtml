<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin - Management</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/admin/images/logo/favicon.ico">

    <!-- page css -->
    <link href="~/admin/vendors/apexcharts/dist/apexcharts.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Core css -->
    <link href="~/admin/css/app.min.css" rel="stylesheet">
    <link href="~/admin/css/style-for.css" rel="stylesheet">
    <link href="~/admin/css/sweetalert2.min.css" rel="stylesheet">
    <link href="~/admin/css/login.css" rel="stylesheet">
    <link href="~/styles/accordion.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>

<body>

    <div class="layout">
        <div class="vertical-layout">
            <!-- Header START -->
            <div class="header-text-dark header-nav layout-vertical">
                <div class="header-nav-wrap">
                    <div class="header-nav-left">
                        <div class="header-nav-item desktop-toggle">
                            <div class="header-nav-item-select cursor-pointer">
                                <i class="nav-icon feather icon-menu icon-arrow-right"></i>
                            </div>
                        </div>
                        <div class="header-nav-item mobile-toggle">
                            <div class="header-nav-item-select cursor-pointer">
                                <i class="nav-icon feather icon-menu icon-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                    <div class="header-nav-right">
                        <div class="header-nav-item">
                            <div class="dropdown header-nav-item-select nav-profile">
                                <div class="toggle-wrapper" id="nav-profile-dropdown" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-circle avatar-image" style="width: 35px; height: 35px; line-height: 35px;">
                                        <img src="~/admin/images/istockphoto-1223671392-612x612.jpg" alt="">
                                    </div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <span class="fw-bold mx-2">@User.Identity.Name</span>
                                    }
                                    <i class="feather icon-chevron-down"></i>
                                </div>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <div class="nav-profile-header">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-circle avatar-image">
                                                <img src="~/admin/images/istockphoto-1223671392-612x612.jpg" alt="">
                                            </div>
                                            <div class="d-flex flex-column ms-1">

                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <span class="fw-bold text-dark">@User.Identity.Name</span>
                                                }

                                            </div>
                                        </div>
                                    </div>
                                    <a class="admin-logout" asp-controller="account" asp-action="logout" asp-area="admin">
                                        <div class="d-flex align-items-center">
                                            <i class="font-size-lg me-2 feather icon-power"></i>
                                            <span>Sign Out</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header END -->
            @RenderBody()

            <!-- Side Nav START -->
            <div class="side-nav vertical-menu nav-menu-light scrollable">
                <div class="nav-logo">
                    <div class="mobile-close">
                        <i class="icon-arrow-left feather"></i>
                    </div>
                </div>
                <ul class="nav-menu">
                    <li class="nav-group-title">APPS</li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="product" asp-action="index">
                            <i class="fa-brands fa-product-hunt"></i>
                            <span class="nav-menu-item-title">Product</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="category" asp-action="index">
                            <i class="fa-solid fa-layer-group"></i>
                            <span class="nav-menu-item-title">Category</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="subcategory" asp-action="index">
                            <i class="fa-solid fa-diagram-predecessor"></i>
                            <span class="nav-menu-item-title">Subcategory</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="slider" asp-action="index">
                            <i class="fa-solid fa-panorama"></i>
                            <span class="nav-menu-item-title">Slider</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="brand" asp-action="index">
                            <i class="fa-brands fa-bandcamp"></i>
                            <span class="nav-menu-item-title">Brand</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="order" asp-action="index">
                            <i class="fa-solid fa-box-open"></i>
                            <span class="nav-menu-item-title">Order</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="color" asp-action="index">
                            <i class="fa-solid fa-palette"></i>
                            <span class="nav-menu-item-title">Color</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="size" asp-action="index">
                            <i class="fa-solid fa-up-right-and-down-left-from-center"></i>
                            <span class="nav-menu-item-title">Size</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="country" asp-action="index">
                            <i class="fa-solid fa-earth-americas"></i>
                            <span class="nav-menu-item-title">Country</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="user" asp-action="index">
                            <i class="fa-solid fa-user"></i>
                            <span class="nav-menu-item-title">User</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="feedback" asp-action="index">
                            <i class="fa-solid fa-comments"></i>
                            <span class="nav-menu-item-title">Feedback</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="message" asp-action="index">
                            <i class="fa-solid fa-envelope"></i>
                            <span class="nav-menu-item-title">Message</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="subscriber" asp-action="index">
                            <i class="fa-solid fa-play"></i>
                            <span class="nav-menu-item-title">Subscriber</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="award" asp-action="index">
                            <i class="fa-solid fa-award"></i>
                            <span class="nav-menu-item-title">Award</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="client" asp-action="index">
                            <i class="fa-solid fa-users-rectangle"></i>
                            <span class="nav-menu-item-title">Our Client</span>
                        </a>
                    </li>
                    <li class="nav-menu-item">
                        <a asp-area="admin" asp-controller="setting" asp-action="index">
                            <i class="fa-solid fa-wrench"></i>
                            <span class="nav-menu-item-title">Setting</span>
                        </a>
                    </li>

                </ul>
            </div>
            <!-- Side Nav END -->

        </div>
    </div>

    <!-- Core Vendors JS -->
    <script src="~/admin/js/vendors.min.js"></script>
    <script src="~/admin/js/sweetalert2.all.min.js"></script>

    @RenderSection("Script", false)
    <!-- page js -->
    <script src="~/admin/vendors/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/admin/js/pages/dashboard.js"></script>

    <!-- Core JS -->
    <script src="~/admin/js/app.min.js"></script>
    <script src="~/admin/js/custom.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>

</html>